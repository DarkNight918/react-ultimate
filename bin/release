#!/bin/sh
set -ue

# TODO: add gulp release
# gulp release (distinct commit for version bump)

export PROJECT_SSH=$(gulp config:get --silent --option=production-ssh)
export PROJECT_HOST=$(gulp config:get --silent --option=production-host)
export PROJECT_SERVICE=$(gulp config:get --silent --option=production-service)

ssh\
  -o SendEnv=PROJECT_HOST\
  -o SendEnv=PROJECT_SERVICE\
  ${PROJECT_SSH} 'bash -s' < bin/remote/deploy
