#!/bin/sh
mkdir -p ./node_modules
ln -fs ../shared           ./node_modules/shared
ln -fs ../frontend/scripts ./node_modules/frontend
ln -fs ../backend/scripts  ./node_modules/backend

mkdir -p ./build/node_modules
ln -fs ../shared            ./build/node_modules/shared
ln -fs ../frontend/scripts  ./build/node_modules/frontend
ln -fs ../backend/scripts   ./build/node_modules/backend
