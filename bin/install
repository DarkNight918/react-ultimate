#!/bin/sh

# Setup default development config
mv shared/config/development.example.js shared/config/development.js 2> /dev/null

# Setup local gulp.js to be runned through `babel-node`
if [[ `uname` == 'Darwin' ]]; then
  gulp_file=`greadlink -f node_modules/.bin/gulp`
else
  gulp_file=`readlink -f node_modules/.bin/gulp`
fi
sed '1 s/ node$/ babel-node/' ${gulp_file} > .gulp.js
mv .gulp.js ${gulp_file}
chmod +x ${gulp_file}

# Relink main folders to enable absolute paths `require("frontend/xxx")`...
mkdir -p ./node_modules
rm -f ./node_modules/shared
rm -f ./node_modules/frontend
rm -f ./node_modules/backend
ln -s ../shared           ./node_modules/shared
ln -s ../frontend/scripts ./node_modules/frontend
ln -s ../backend/scripts  ./node_modules/backend

mkdir -p ./build/node_modules
rm -f ./build/node_modules/shared
rm -f ./build/node_modules/frontend
rm -f ./build/node_modules/backend
ln -s ../shared            ./build/node_modules/shared
ln -s ../frontend/scripts  ./build/node_modules/frontend
ln -s ../backend/scripts   ./build/node_modules/backend